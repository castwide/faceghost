{
  "manifest_version": 3,
  "name": "Faceghost",
  "version": "1.0",

  "description": "Remove unsolicited posts from your Facebook timeline",

  "icons": {
    "32": "icon-32.png",
    "64": "icon-64.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["faceghost.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "faceghost@castwide.com"
    }
  }
}
